	printf("str3 is upper: %d\n", ft_str_is_uppercase(str3));

	return (0);
}

ex06
#include <stdio.h>

int	main(void)
{
	char str1[] = "jshkdsjS3";
	char str2[] = "\n";
	char str3[] = "";

	printf("str1 is print: %d\n", ft_str_is_printable(str1));
	printf("str2 is prtin: %d\n", ft_str_is_printable(str2));
	printf("str3 is print: %d\n", ft_str_is_printable(str3));

	return (0);
}

